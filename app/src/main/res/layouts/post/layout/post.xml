<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_view"
    android:padding="@dimen/default_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/post_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables">

        <androidx.cardview.widget.CardView
            android:id="@+id/post_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:cardBackgroundColor="@color/md_theme_onSurface"
            app:cardCornerRadius="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:cardCornerRadius="250dp">

                <ImageView
                    android:id="@+id/user_avatar_view"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    tools:srcCompat="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/post_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:textSize="16sp" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/post_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="@color/polaroidBackground"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="H,0.8:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/card_polaroid" />

    </com.google.android.material.card.MaterialCardView>

    <RelativeLayout
        android:id="@+id/total_reaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintBottom_toTopOf="@+id/reaction_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:id="@+id/latest_reaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/n3_reaction"
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:layout_marginStart="24dp"
                android:background="?android:attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/n2_reaction"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:background="?android:attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/n1_reaction"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?android:attr/selectableItemBackground" />

            <TextView
                android:id="@+id/latest_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="64dp"
                android:textSize="12sp" />

        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reaction_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/add_comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0">

        <LinearLayout
            android:id="@+id/add_reaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/love"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="@drawable/heart_emoji" />

            <ImageButton
                android:id="@+id/cry"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="@dimen/default_margin"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="@drawable/cry_emoji" />

            <ImageButton
                android:id="@+id/smile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="@dimen/default_margin"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="@drawable/smile_emoji" />

            <ImageButton
                android:id="@+id/clown"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="@dimen/default_margin"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="@drawable/clown_emoji" />

            <ImageButton
                android:id="@+id/skull"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="@dimen/default_margin"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="@drawable/skull_emoji" />
        </LinearLayout>
    </RelativeLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:background="@drawable/rounded_edittext"
        android:drawableEnd="@drawable/ic_send"
        android:drawableTint="@color/md_theme_onSurface"
        android:hint="@string/add_your_comment"
        android:inputType="text"
        android:padding="12dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/total_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:text="Hello"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_comment" />
</androidx.constraintlayout.widget.ConstraintLayout>