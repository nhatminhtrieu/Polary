<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".usersList.UserActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="490dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/add_reaction"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/love"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/heart_emoji"
                android:background="?android:attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/cry"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:src="@drawable/cry_emoji"
                android:background="?android:attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/smile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:src="@drawable/smile_emoji"
                android:background="?android:attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/clown"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:src="@drawable/clown_emoji"
                android:background="?android:attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/skull"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:src="@drawable/skull_emoji"
                android:background="?android:attr/selectableItemBackground" />
        </LinearLayout>
    </RelativeLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_comment"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:drawableEnd="@drawable/ic_send"
        android:autofillHints="username"
        android:hint="Add a comment"
        android:inputType="text"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/total_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:text="View all 10 comments"/>

</LinearLayout>